{
    "manifest_version": 3,
    "version": "1.0",
    "name": "BreakingBarriersChat",
    "description": "Chrome extension that translates idioms to different languages",
    "action": {
        "default_popup": "index.html",
        "default_icon": "Logo.png"
    }, 
    "permissions": ["scripting", "activeTab"],

    "content_scripts": [
    {   "matches": ["<all_urls>"],
        "js" : ["content.js"]}
    ]
    }