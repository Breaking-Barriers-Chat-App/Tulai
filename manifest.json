{
    "manifest_version": 3,
    "version": "1.0",
    "name": "BreakingBarriersChat",
    "description": "Chrome extension that translates idioms to different languages",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["scripting", "activeTab", "http://localhost:5000/"],
    "background": {
        "service_worker": "index.js"
    },
    "content_scripts": [
    {   "matches": ["<all_urls>"],
        "js" : ["content.js"]}
    ]
    }
